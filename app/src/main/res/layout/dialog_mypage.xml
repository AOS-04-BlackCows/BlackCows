<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/mypage_dialog_corner_white">

    <TextView
        android:id="@+id/tv_edit_name"
        android:text="이름 변경"
        style="@style/subtitle_b"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="16dp"
        android:paddingStart="32dp"
        android:background="@drawable/mypage_dialog_corner_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_edit_name"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="wrap_content"
        android:hint="이름 편집"
        android:inputType="text"
        android:textColorHint="@color/white"
        style="@style/body"
        android:background="@drawable/cl_mypage_fragment_corner_70secondary"
        android:layout_marginTop="80dp"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테스트"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:textColor="@color/highlightRed"
        android:visibility="invisible"
        style="@style/caption_b"
        app:layout_constraintTop_toBottomOf="@id/et_edit_name"
        app:layout_constraintStart_toStartOf="@id/et_edit_name"/>



    <android.widget.Button
        android:id="@+id/btn_edit_cancel"
        android:text="취소"
        style="@style/body_b"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/mypage_dialog_corner_50red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.widget.Button
        android:id="@+id/btn_edit_save"
        android:text="저장"
        style="@style/body_b"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/mypage_dialog_corner_50red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>